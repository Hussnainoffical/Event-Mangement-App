<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="12dp"
    android:elevation="4dp"
    android:backgroundTint="#F8F8F8">

    <!-- Event Image -->
    <ImageView
        android:id="@+id/ivEventImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_event_image_placeholder"
        android:contentDescription="Event Image"
        android:layout_marginBottom="12dp" />

    <!-- Event Title -->
    <TextView
        android:id="@+id/tvEventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comedy Gala Night at the Club"
        android:textColor="#1E0C3E"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- Event Date -->
    <TextView
        android:id="@+id/tvEventDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="17 Mar 2023 â€¢ California, USA"
        android:textColor="#888888"
        android:textSize="14sp"
        android:layout_marginBottom="6dp" />

    <!-- Event Type -->
    <TextView
        android:id="@+id/tvEventType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ‰ Party"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:padding="6dp"
        android:background="@drawable/bg_event_type"
        android:layout_marginBottom="12dp" />



</LinearLayout>
